<h1>Categories</h1>
<%= form_for Category.new ,url: admin_categories_path do |f| %>
  <div class="form-group">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, Category.all, :id, :name,prompt: "Select Category" %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control',placeholder:"enter your name" %>
  </div>
  <div class="">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
<%= link_to 'Home',admin_root_path %>
